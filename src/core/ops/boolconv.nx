        {
            public func(&const self) opBoolConv() -> bool
            {
                return !!self;
            }
        }
    }
}

ImplBoolConv!{ i8 i16 i32 i64 i128 isize u8 u16 u32 u64 u128 usize f16 f32 f64 f128 bool }